<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/live_card_radius"
    app:cardElevation="@dimen/live_card_shadow"
    app:cardPreventCornerOverlap="false"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/selector_live_fore"
        android:clickable="true"
        >


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_section_topic"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            app:riv_corner_radius_top_left="@dimen/live_card_radius"
            app:riv_corner_radius_top_right="@dimen/live_card_radius"
            android:scaleType="centerCrop"
              />

    </FrameLayout>



</android.support.v7.widget.CardView>


</LinearLayout>
