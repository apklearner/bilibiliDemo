<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/live_card_radius"
            app:cardElevation="@dimen/live_card_shadow"
            android:foreground="@drawable/selector_live_fore"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_live_item_foot_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

        </android.support.v7.widget.CardView>
<ImageView
    android:id="@+id/iv_live_item_foot_more"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/ic_launcher"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:layout_centerVertical="true"
    />

        <TextView
            android:id="@+id/tv_live_item_foot_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_live_item_foot_more"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />


    </RelativeLayout>

</RelativeLayout>
