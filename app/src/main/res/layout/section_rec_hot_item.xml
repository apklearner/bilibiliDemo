<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/live_card_radius"
        app:cardElevation="@dimen/live_card_radius"
        app:cardPreventCornerOverlap="false"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selector_live_fore"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_rec_cover"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:riv_corner_radius_top_right="@dimen/live_card_radius"
                    app:riv_corner_radius_top_left="@dimen/live_card_radius"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/tv_rec_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    >

                    <TextView
                        android:id="@+id/tv_rec_play_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_clip_view_num"
                        android:gravity="center_vertical"
                        android:textSize="10sp"

                        />

                    <TextView
                        android:id="@+id/tv_rec_danm_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_clip_danmaku_num"
                        android:gravity="center_vertical"
                        android:textSize="10sp"
                        />
                </LinearLayout>


            </LinearLayout>




        </FrameLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
