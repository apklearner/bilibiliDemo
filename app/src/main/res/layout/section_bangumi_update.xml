<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_bangumi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/live_card_radius"
        app:cardElevation="@dimen/live_card_shadow"
        app:cardPreventCornerOverlap="false"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:foreground="@drawable/selector_live_fore"
          android:clickable="true"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >


              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:id="@+id/iv_bangumi_item_cover"
                      android:layout_width="match_parent"
                      android:layout_height="110dp"
                      />


                  <!--<TextView-->
                      <!--android:id="@+id/tv_bangumi_item_watch"-->
                      <!--android:textSize="10sp"-->
                      <!--android:layout_width="wrap_content"-->
                      <!--android:layout_height="wrap_content"-->
                      <!--android:background="@drawable/shape_gray_radius"-->
                      <!--android:textColor="@color/title_w_n"-->
                      <!--android:text=""-->
                      <!--android:layout_marginTop="10dp"-->
                      <!--android:layout_marginRight="-5dp"-->
                     <!--android:layout_alignParentRight="true"-->
                      <!--android:paddingLeft="5dp"-->
                      <!--android:paddingRight="5dp"-->

                      <!--/>-->


              </RelativeLayout>
            <TextView
                android:id="@+id/tv_bangumi_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_bangumi_update_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        />


                    <TextView
                        android:id="@+id/tv_bangumi_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/live_button_gray"
                        android:textSize="12sp"
                        android:layout_marginRight="5dp"
                        />
                </RelativeLayout>



          </LinearLayout>



      </FrameLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_bangumi_item_watch"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_radius_trans"
        android:textColor="@color/title_w_n"
        android:text=""
        android:layout_marginTop="12dp"
        android:layout_marginRight="-5dp"
        android:layout_alignRight="@+id/card_bangumi"
        android:layout_alignTop="@+id/card_bangumi"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"


        />

</RelativeLayout>
