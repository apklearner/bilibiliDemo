<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/tv_reply_child_floor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/live_button_gray_text"
            android:text="11111"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_reply_child_floor_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/live_button_gray_text"
            android:text="11111"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/tv_reply_child_floor_name"
           android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_reply_child_floor_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            android:text="1111"
            android:layout_below="@+id/tv_reply_child_floor_time"
            android:layout_marginTop="5dp"

            />

        <View
            android:id="@+id/line_reply_child_floor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/live_button_gray_text"
            android:layout_below="@+id/tv_reply_child_floor_content"
            android:visibility="visible"
            />
    </RelativeLayout>

</RelativeLayout>
