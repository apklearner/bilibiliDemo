<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/live_card_radius"
        app:cardElevation="@dimen/live_card_shadow"
        app:cardPreventCornerOverlap="false"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selector_live_fore"
            android:clickable="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_banguumi_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:riv_corner_radius_top_left="@dimen/live_card_radius"
                app:riv_corner_radius_top_right="@dimen/live_card_radius"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_bangumi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorAccent"
               android:singleLine="true"
                android:ellipsize="end"
                />
    <TextView
        android:id="@+id/tv_bangumi_complete_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/live_button_gray"
        />


        </LinearLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>

    
</RelativeLayout>
