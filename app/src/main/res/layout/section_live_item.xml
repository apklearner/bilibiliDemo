<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/live_card_radius"
    app:cardElevation="@dimen/live_card_shadow"
    app:cardPreventCornerOverlap="false"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/selector_live_fore"
        android:clickable="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_live_item_bg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:riv_corner_radius_top_left="@dimen/live_card_radius"
            app:riv_corner_radius_top_right="@dimen/live_card_radius"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/iv_live_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@id/iv_live_item_bg"
            android:layout_marginBottom="-25dp"


            />

        <TextView
            android:id="@+id/tv_live_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_toRightOf="@+id/iv_live_item_icon"

            android:layout_below="@+id/iv_live_item_bg"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/iv_live_item_bg"
            >
            <TextView
                android:id="@+id/tv_live_item_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/live_button_gray_text"
                android:background="@drawable/shape_gray_radius"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                />

            <TextView
                android:id="@+id/tv_live_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/tv_live_item_online"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                />

        </RelativeLayout>
    </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>
